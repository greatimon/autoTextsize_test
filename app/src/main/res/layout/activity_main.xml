<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:autofit="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.jyn.autotextsize_test.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <com.example.jyn.autotextsize_test.AutofitTextView
            android:id="@+id/output_autofit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:gravity="center"
            tools:text="1_AutoResizeTextview"
            android:textSize="50sp"
            autofit:minTextSize="8sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <com.example.jyn.autotextsize_test.AutofitTextView
            android:id="@+id/output_autofit_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:gravity="center"
            tools:text="2_AutoResizeTextview"
            android:textSize="50sp"
            autofit:minTextSize="8sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <com.example.jyn.autotextsize_test.AutofitTextView
            android:id="@+id/output_autofit_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:gravity="center"
            tools:text="3_AutoResizeTextview"
            android:textSize="50sp"
            autofit:minTextSize="8sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <com.example.jyn.autotextsize_test.AutofitTextView
            android:id="@+id/output_autofit_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:gravity="center"
            tools:text="4_AutoResizeTextview"
            android:textSize="50sp"
            autofit:minTextSize="8sp" />
    </LinearLayout>


</LinearLayout>
